{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": ["title", "outline"],
  "properties": {
    "title": {
      "type": "string"
    },
    "outline": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["level", "text", "page"],
        "properties": {
          "level": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "page": {
            "type": "integer"
          },
          "lang": {
            "type": ["string", "null"]
          }
        }
      }
    }
  }
}
